<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banking System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light"  style="background-color: #e3f2fd;">
  <a class="navbar-brand" href="#">Sparks Foundation</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
      <a class="nav-link" href="/customers">Customers</a>
      <a class="nav-link" href="/history">Transaction History</a>
      
    </div>
  </div>
</nav>
	
	
	
	
	
	<table class="table table-dark">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Balance</th>
	  <th scope="col">Depositor</th>
    </tr>
  </thead>
  <tbody>
    
		<%customer.forEach(function(object){ %>
	<tr><td><%=object.name%></td><td><%=object.email%></td><td><%=object.balance%></td><td><a class="btn btn-primary" href="/customers/<%=object._id%>" role="button">Select</a></td></tr>
	<%})%>
      
    
  </tbody>
</table>
	
	
	
	
	


